<%- include('partials/_header') -%>

  <body>
    <!-- Navigation -->
    <%- include('partials/_navigation') -%>

    <!-- Page Header -->
    <header class="masthead" style="background-image: url('img/post-bg.jpg')">
      <div class="overlay"></div>
      <div class="container">
        <div class="row">
          <div class="col-lg-8 col-md-10 mx-auto">
            <div class="post-heading">
              <h1 class="mb-4"><%= post.title %></h1>
              <span class="meta"
                >Posted update's date
                <a href="#"><%= post.dateCreated %></a>
                </span>
            </div>
          </div>
        </div>
      </div>
    </header>

    <!-- Post Content -->
    <article>
      <div class="container">
        <div class="row">
          <div class="col-lg-8 col-md-10 mx-auto">
            <%= post.description %>
          </div>
        </div>
      </div>
    </article>

    <hr />
    <!-- Share box --> 
							<div class="tm-bg-gray tm-share-box">
								<div class="text-center">
									<a href="/posts/edit/<%= post._id %>" class="btn btn-primary mb-4"><span>Update Details</span></a>	
								</div>	
								<div class="text-center">
									<a href="/posts/<%= post._id %>?_method=DELETE" class="btn btn-danger"
									onclick="return confirm('ARE YOU SURE?')"><span>Delete Post</span></a>	
								</div>								
							</div>

    <!-- Footer -->
    <%- include('partials/_footer') -%>

    <!-- Bootstrap core JavaScript -->
    <script src="/vendor/jquery/jquery.min.js"></script>
    <script src="/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

    <!-- Custom scripts for this template -->
    <script src="js/clean-blog.min.js"></script>
  </body>
</html>